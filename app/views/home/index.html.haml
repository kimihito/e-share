- content_for :javascript do
  %script{:src => "http://js.pusher.com/1.12/pusher.min.js"}
  :javascript
    var pusher = new Pusher('#{Pusher.key}'); // uses your API KEY
    var channel = pusher.subscribe('post_videos');
    channel.bind('new', function(data) {
    console.log(data)
      $("<div>").html((data)).prependTo($("#xvideo_timeline"))
    });

%section#introduction
  %h2 e-share
  .indent
    Sharing for adults videos
  .indent
    #{link_to "Chromeエクステンション", "URL"} で快適なエロライフを!!!
%section#line
  %h3 現在誰かが視聴中
  %div{"id"=>"xvideo_timeline"}
    - @recently_watched.each do |xvideo|
      .indent.well
        %img{"src"=>"#{xvideo.thumb_url}","alt"=>"Description of image","style"=>"width:150px;height:150px; float:left;"}

        #{link_to xvideo.title, xvideo.url, "style" => "margin-left:20px;font-size:23px"}
        - if current_user
          %div{"class"=>"fav_button#{xvideo.user_favorited?(current_user) ? ' faved' : '' }","data-video-id"=>xvideo.id}

